<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs title="Kaltura Wave" height="370">
    <Require feature="wave" />
    <Require feature="dynamic-height" />
    <Require feature="tabs" />
  </ModulePrefs>
  <Content type="html">
    <![CDATA[
      <script type="text/javascript">
        // Set Player as default tab
        var tabs = new gadgets.TabSet(__MODULE_ID__, "Play");
        
        // Initialization
        function init() {
          
          // Define Tabs
          tabs.addTab("Play", {
                      contentContainer: document.getElementById("kplayer")
                      });
          tabs.addTab("Edit", {
                      contentContainer: document.getElementById("keditor")
                      });
          tabs.addTab("Add Media", {
                           contentContainer: document.getElementById("kmedia_adder")
                           });
          };
        
        // Call init function to initialize and display tabs.
        gadgets.util.registerOnLoadHandler(init);
        
        // Configuration for KPlayer
        var kparams = {
                      allowscriptaccess: "always",
                      allownetworking: "all",
                      allowfullscreen: "true",
                      wmode: "opaque"
                      };
        var kflashVars = {
                      entryId: "hsgxym7h34"
                      };
        swfobject.embedSWF("http://www.kaltura.com/kwidget/wid/_39061/ui_conf_id/1008311", "kplayer", "400", "360", "9.0.0", false, kflashVars, kparams);

      </script>

      <div id="kplayer" style="display:none"></div>
      <script type="text/javascript" src="js/jquery-1.2.6.min.js"></script>
      <script type="text/javascript" src="js/swfobject.js"></script>

      <div id="keditor"style="display:none">Editor Goes Here</div>
      <div id="kmedia_adder" style="display:none">Media Management Goes Here</div>
    ]]>
  </Content>
</Module>
